{
    "expo": {
        "name": "kurs",
        "slug": "kurs",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "kurs",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true
        },
        "android": {
            "adaptiveIcon": {
                "backgroundColor": "#E6F4FE",
                "foregroundImage": "./assets/images/android-icon-foreground.png",
                "backgroundImage": "./assets/images/android-icon-background.png",
                "monochromeImage": "./assets/images/android-icon-monochrome.png"
            },
            "edgeToEdgeEnabled": true,
            "predictiveBackGestureEnabled": false
        },
        "web": {
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/splash-icon.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff",
                    "dark": {
                        "backgroundColor": "#000000"
                    }
                }
            ],
            "expo-sqlite",
            [
                "expo-font",
                {
                    "fonts": ["./assets/fonts/static/GoogleSans-Regular.ttf", "./assets/fonts/static/GoogleSans-Medium.ttf", "./assets/fonts/static/GoogleSans-SemiBold.ttf", "./assets/fonts/static/GoogleSans-Bold.ttf"],
                    "android": {
                        "fonts": [
                            {
                                "fontFamily": "GoogleSans",
                                "fontDefinitions": [
                                    { "path": "./assets/fonts/static/GoogleSans-Regular.ttf", "weight": 400 },
                                    { "path": "./assets/fonts/static/GoogleSans-Medium.ttf", "weight": 500 },
                                    { "path": "./assets/fonts/static/GoogleSans-SemiBold.ttf", "weight": 600 },
                                    { "path": "./assets/fonts/static/GoogleSans-Bold.ttf", "weight": 700 }
                                ]
                            }
                        ]
                    }
                }
            ],
            [
                "expo-notifications",
                {
                    "icon": "./assets/images/icon.png",
                    "color": "#10B981"
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true,
            "reactCompiler": true
        }
    }
}
